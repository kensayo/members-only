<% @post.each do |post| %>
  <div class="card my-2">
    <div class="card-body">
      <div class="d-flex justify-content-between flex-row">
        <h3><%= post.title %></h3>
        <% if user_signed_in? %>
          <p>Author: <%= current_user.email %></p>
        <% end %>
      </div>
      <p><%= post.body %></p>
    </div>
  </div>
<% end %>